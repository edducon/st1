<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.conferenceapp.controller.ProfileController"
            prefWidth="600" prefHeight="420">

    <GridPane hgap="10" vgap="12" style="-fx-padding: 25;">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="140"/>
            <ColumnConstraints prefWidth="420"/>
        </columnConstraints>

        <!-- неизменяемый -->
        <Label text="ID Number:"           GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField"         editable="false"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="ФИО:"                GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="fullNameField"   editable="true"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="e-mail:"             GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField"      GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Телефон:"            GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField"      GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Направление:"        GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="directionBox"     prefWidth="220"
                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Страна:"             GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="countryBox"       prefWidth="220"
                  GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- смена пароля -->
        <Separator GridPane.rowIndex="6" GridPane.columnSpan="2"/>

        <Label text="Новый пароль:"       GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pwd1"        GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Повторите пароль:"   GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pwd2"        GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <CheckBox fx:id="showPwd" text="Показать пароль"
                  GridPane.rowIndex="9" GridPane.columnIndex="1"/>

        <!-- сообщения / кнопки -->
        <Label fx:id="errorLabel" style="-fx-text-fill: red;"
               GridPane.rowIndex="10" GridPane.columnIndex="1"/>

        <HBox spacing="10" GridPane.rowIndex="11" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Button fx:id="saveBtn" text="Сохранить" styleClass="button-primary"/>
            <Button text="Закрыть" onAction="#onClose"/>
        </HBox>
    </GridPane>
</AnchorPane>

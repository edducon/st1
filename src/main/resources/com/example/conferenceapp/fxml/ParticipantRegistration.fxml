<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.conferenceapp.controller.ParticipantRegistrationController">
    <content>
        <VBox spacing="12" padding="15">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="140" halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="ID Number:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-weight: bold;" />

                <Label text="Имя:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Пол:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <ComboBox fx:id="genderBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Дата рождения:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <DatePicker fx:id="birthDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Телефон:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1" promptText="+7(999)-999-99-99" />

                <Label text="Страна:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <ComboBox fx:id="countryBox" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                <Label text="Направление:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <ComboBox fx:id="directionBox" editable="true" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                <Label text="Мероприятие:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                <ComboBox fx:id="eventBox" GridPane.rowIndex="8" GridPane.columnIndex="1" />

                <Label text="Фото:" GridPane.rowIndex="9" GridPane.columnIndex="0" />
                <HBox spacing="6" GridPane.rowIndex="9" GridPane.columnIndex="1">
                    <TextField fx:id="photoField" HBox.hgrow="ALWAYS" />
                    <Button fx:id="choosePhotoBtn" text="Обзор" />
                </HBox>

                <Label text="Пароль:" GridPane.rowIndex="10" GridPane.columnIndex="0" />
                <PasswordField fx:id="passwordField" GridPane.rowIndex="10" GridPane.columnIndex="1" />

                <Label text="Повторите пароль:" GridPane.rowIndex="11" GridPane.columnIndex="0" />
                <PasswordField fx:id="confirmField" GridPane.rowIndex="11" GridPane.columnIndex="1" />
            </GridPane>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>
